<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ========================================================================
         SOLUCIÓN DEFINITIVA v1.3.1 - CSS EN BODY
         
         Inyecta CSS directamente en el body del layout para afectar todos
         los reportes
         ======================================================================== -->
    
    <!-- Opción 1: Heredar de external_layout_standard -->
    <record id="external_layout_standard_compact" model="ir.ui.view">
        <field name="name">Compact Layout - Global CSS</field>
        <field name="model">ir.ui.view</field>
        <field name="inherit_id" ref="web.external_layout_standard"/>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='wrapwrap']" position="before">
                <style type="text/css">
                    /* ================================================================
                       CSS ULTRA-AGRESIVO GLOBAL v1.3.1
                       ================================================================ */
                    
                    /* Reset header */
                    header, .header, div.header {
                        margin: 0mm !important;
                        padding: 0mm !important;
                    }
                    
                    /* Article compacto */
                    main, .article, div.article {
                        margin-top: 0mm !important;
                        padding-top: 0mm !important;
                    }
                    
                    /* Página compacta */
                    .page, div.page {
                        padding-top: 1mm !important;
                        margin-top: 0mm !important;
                    }
                    
                    /* Rows compactas - CRÍTICO */
                    .row, div.row {
                        margin: 0mm !important;
                        padding: 0mm !important;
                    }
                    
                    /* Bootstrap reset */
                    .m-0, .m-1, .m-2, .m-3, .m-4, .m-5,
                    .mt-0, .mt-1, .mt-2, .mt-3, .mt-4, .mt-5,
                    .mb-0, .mb-1, .mb-2, .mb-3, .mb-4, .mb-5,
                    .my-0, .my-1, .my-2, .my-3, .my-4, .my-5 {
                        margin-top: 0mm !important;
                        margin-bottom: 0mm !important;
                    }
                    
                    .p-0, .p-1, .p-2, .p-3, .p-4, .p-5,
                    .pt-0, .pt-1, .pt-2, .pt-3, .pt-4, .pt-5,
                    .pb-0, .pb-1, .pb-2, .pb-3, .pb-4, .pb-5,
                    .py-0, .py-1, .py-2, .py-3, .py-4, .py-5 {
                        padding-top: 0mm !important;
                        padding-bottom: 0mm !important;
                    }
                    
                    /* Elementos */
                    div:empty { display: none !important; }
                    body, div, span, p { line-height: 1.1 !important; }
                    h1, h2, h3, h4, h5, h6, p { margin: 0mm !important; padding: 0mm !important; }
                    br { line-height: 0.3 !important; }
                    
                    /* Tablas */
                    table { margin: 1mm 0mm !important; }
                    table thead th, table tbody td { padding: 1mm 2mm !important; line-height: 1.1 !important; }
                    
                    /* Containers */
                    .o_report_layout_standard, #wrapwrap, .container, .container-fluid {
                        padding-top: 0mm !important;
                        margin-top: 0mm !important;
                    }
                </style>
            </xpath>
        </field>
    </record>
    
    <!-- Opción 2: Heredar del report_invoice_document -->
    <record id="report_invoice_document_compact" model="ir.ui.view">
        <field name="name">Invoice Compact - Document</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.report_invoice_document"/>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('page')]" position="inside">
                <style type="text/css">
                    /* CSS para report_invoice_document */
                    .header { margin: 0mm !important; padding: 0mm !important; }
                    .article { margin-top: 0mm !important; padding-top: 0mm !important; }
                    .row { margin: 0mm !important; padding: 0mm !important; }
                </style>
            </xpath>
        </field>
    </record>
    
    <!-- Opción 3: Heredar del report_invoice principal -->
    <record id="report_invoice_compact" model="ir.ui.view">
        <field name="name">Invoice Compact - Main</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.report_invoice"/>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <xpath expr="//t[@t-call='web.html_container']" position="inside">
                <style type="text/css">
                    /* CSS para report_invoice */
                    .header { margin: 0mm !important; padding: 0mm !important; }
                    .article { margin-top: 0mm !important; padding-top: 0mm !important; }
                    .row { margin: 0mm !important; padding: 0mm !important; }
                </style>
            </xpath>
        </field>
    </record>
    
</odoo>
