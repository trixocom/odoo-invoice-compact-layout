<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ========================================================================
         SOLUCIÓN DEFINITIVA v1.4.0 - SOLO TEMPLATES DE INVOICE
         
         Hereda únicamente de templates de factura que sabemos que existen
         ======================================================================== -->
    
    <!-- Template 1: report_invoice_document -->
    <record id="report_invoice_document_compact" model="ir.ui.view">
        <field name="name">Invoice Compact - Document</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.report_invoice_document"/>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <!-- Inyectar CSS al inicio del documento -->
            <xpath expr="//t[@t-call='web.external_layout']" position="before">
                <style type="text/css">
                    /* ================================================================
                       CSS ULTRA-COMPACTO v1.4.0
                       Se aplica directamente al reporte de factura
                       ================================================================ */
                    
                    /* Reset header - CRÍTICO */
                    header, .header, div.header {
                        margin: 0mm !important;
                        margin-top: 0mm !important;
                        margin-bottom: 0mm !important;
                        padding: 0mm !important;
                        padding-top: 0mm !important;
                        padding-bottom: 0mm !important;
                    }
                    
                    /* Article compacto - CRÍTICO */
                    main, .article, div.article {
                        margin-top: 0mm !important;
                        margin-bottom: 0mm !important;
                        padding-top: 0mm !important;
                    }
                    
                    /* Página compacta */
                    .page, div.page {
                        padding-top: 1mm !important;
                        margin-top: 0mm !important;
                    }
                    
                    /* Company info sin espacio */
                    .company_address, .address {
                        margin: 0mm !important;
                        padding: 0mm !important;
                        line-height: 1.0 !important;
                    }
                    
                    /* Rows compactas - MUY IMPORTANTE */
                    .row, div.row {
                        margin: 0mm !important;
                        margin-top: 0mm !important;
                        margin-bottom: 0mm !important;
                        padding: 0mm !important;
                        padding-top: 0mm !important;
                        padding-bottom: 0mm !important;
                    }
                    
                    /* Bootstrap margins */
                    .m-0, .m-1, .m-2, .m-3, .m-4, .m-5,
                    .mt-0, .mt-1, .mt-2, .mt-3, .mt-4, .mt-5,
                    .mb-0, .mb-1, .mb-2, .mb-3, .mb-4, .mb-5,
                    .my-0, .my-1, .my-2, .my-3, .my-4, .my-5 {
                        margin-top: 0mm !important;
                        margin-bottom: 0mm !important;
                    }
                    
                    /* Bootstrap paddings */
                    .p-0, .p-1, .p-2, .p-3, .p-4, .p-5,
                    .pt-0, .pt-1, .pt-2, .pt-3, .pt-4, .pt-5,
                    .pb-0, .pb-1, .pb-2, .pb-3, .pb-4, .pb-5,
                    .py-0, .py-1, .py-2, .py-3, .py-4, .py-5 {
                        padding-top: 0mm !important;
                        padding-bottom: 0mm !important;
                    }
                    
                    /* Divs vacíos */
                    div:empty {
                        display: none !important;
                        height: 0 !important;
                        margin: 0 !important;
                        padding: 0 !important;
                    }
                    
                    /* Line height */
                    body, div, span, p {
                        line-height: 1.1 !important;
                    }
                    
                    /* Headers y párrafos */
                    h1, h2, h3, h4, h5, h6, p {
                        margin: 0mm !important;
                        padding: 0mm !important;
                    }
                    
                    /* BR tags */
                    br {
                        line-height: 0.3 !important;
                        margin: 0 !important;
                    }
                    
                    /* Tablas */
                    table {
                        margin: 1mm 0mm !important;
                        border-collapse: collapse !important;
                    }
                    
                    table thead th,
                    table tbody td {
                        padding: 1mm 2mm !important;
                        line-height: 1.1 !important;
                    }
                    
                    /* Containers */
                    .container, .container-fluid {
                        padding-top: 0mm !important;
                        padding-bottom: 0mm !important;
                    }
                    
                    /* Layout */
                    .o_report_layout_standard {
                        padding-top: 0mm !important;
                        margin-top: 0mm !important;
                    }
                </style>
            </xpath>
        </field>
    </record>
    
    <!-- Template 2: report_invoice -->
    <record id="report_invoice_compact" model="ir.ui.view">
        <field name="name">Invoice Compact - Report</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.report_invoice"/>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <!-- Inyectar CSS al inicio -->
            <xpath expr="//t[@t-call='web.html_container']" position="before">
                <style type="text/css">
                    /* CSS para report_invoice */
                    .header { margin: 0mm !important; padding: 0mm !important; }
                    .article { margin-top: 0mm !important; padding-top: 0mm !important; }
                    .row { margin: 0mm !important; padding: 0mm !important; }
                    .page { padding-top: 1mm !important; }
                </style>
            </xpath>
        </field>
    </record>
    
</odoo>
