<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Agregar CSS global a TODOS los reportes -->
    <template id="invoice_compact_global_styles" inherit_id="web.report_layout" priority="999">
        <xpath expr="//head" position="inside">
            <style type="text/css">
                /* === INVOICE COMPACT LAYOUT - GLOBAL STYLES === */
                
                /* Eliminar espacios del header */
                .header, div.header {
                    margin: 0 !important;
                    padding: 0 !important;
                }
                
                /* Compactar página */
                .page, div.page {
                    padding-top: 3mm !important;
                    margin-top: 0 !important;
                }
                
                /* Compactar article */
                .article, div.article {
                    margin-top: 0 !important;
                    padding-top: 1mm !important;
                }
                
                /* Todas las filas compactas */
                .row, div.row {
                    margin-top: 1mm !important;
                    margin-bottom: 1mm !important;
                }
                
                /* Dirección de empresa sin espacio */
                .company_address {
                    margin: 0 !important;
                    padding: 0 !important;
                    line-height: 1.1 !important;
                }
                
                /* Tablas compactas */
                table {
                    margin: 2mm 0 !important;
                }
                
                table thead th {
                    padding: 1mm !important;
                    line-height: 1.1 !important;
                }
                
                table tbody td {
                    padding: 1mm 2mm !important;
                    line-height: 1.1 !important;
                }
                
                /* Eliminar márgenes Bootstrap */
                .mt-1, .mt-2, .mt-3, .mt-4, .mt-5 { margin-top: 1mm !important; }
                .mb-1, .mb-2, .mb-3, .mb-4, .mb-5 { margin-bottom: 1mm !important; }
                .pt-1, .pt-2, .pt-3, .pt-4, .pt-5 { padding-top: 1mm !important; }
                .pb-1, .pb-2, .pb-3, .pb-4, .pb-5 { padding-bottom: 1mm !important; }
                
                /* Ocultar divs vacíos */
                div:empty { display: none !important; }
                
                /* Reducir altura de línea */
                body, div, span, p { line-height: 1.2 !important; }
                
                /* Títulos compactos */
                h1, h2, h3, h4, h5, h6 {
                    margin: 1mm 0 !important;
                    padding: 0 !important;
                }
            </style>
        </xpath>
    </template>
    
</odoo>
