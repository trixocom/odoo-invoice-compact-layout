<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ========================================================================
         SOLUCIÓN DEFINITIVA v1.0.7 - CORREGIDA
         
         Basado en el código fuente real compartido:
         - account.report_invoice_copy_1 (template principal)
         - account.report_invoice_document_copy_1 
